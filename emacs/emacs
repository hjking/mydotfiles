;; time-stamp warning off
(setq time-stamp-warn-inactive t)
;; time-stamp end
(setq time-stamp-end "\n")
;; time-stamp format
(setq time-stamp-format "%04y-%02m-%02d %3a %02H:%02M:%02S")
