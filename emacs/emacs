(add-hook 'emacs-lisp-mode-hook 'my-elisp-startup)
(add-hook 'emacs-lisp-mode-hook 'turn-on-auto-fill)
(add-hook 'emacs-lisp-mode-hook 'esk-remove-elc-on-save)
