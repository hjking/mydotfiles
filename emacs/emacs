;;; ctags -e -R *.cpp *.h
;;; M-. : find-tag ; M-* : jump back ; 
;;; M-x tags-search : regexp-search
;;; M-, : resume 'tags-search'
;;; M-x tags-apropos : list all tags in a tag file that match a regexp
